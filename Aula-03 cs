// ou

Double count, soma, num;
count = 1;
soma = 0;
Console.WriteLine("Insira o numero de vezes que deseja somar: ");
num = Convert.ToDouble(Console.ReadLine());
while (count <= num)
{
    soma = soma + count;
    Console.WriteLine("Somou " + count + " soma vale agora:" + soma);
    count = count + 1;
}

Console.WriteLine("Soma dos " + num + " numeros é : " + soma);

