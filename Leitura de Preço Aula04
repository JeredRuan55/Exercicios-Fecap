
Double [] Preco=new Double [5];
Double Soma;
Double PrecoMaior, PrecoMenor, PrecoMedio;
for (int i = 0; i < Preco.Length; i++)
 {
    Console.WriteLine("Entre com o Preço " + i + " coletado: ");
    Preco[i] = Convert.ToDouble(Console.ReadLine());
}
Soma = 0;
for (int i = 0; i< Preco.Length; i++)
{
    Console.WriteLine("Preço " + i + " coletado: " + Preco[i]);
    Soma= Soma + Preco[i];
}
Console.WriteLine("A soma dos preços é: "+ Soma);

PrecoMaior = Preco[0];
PrecoMenor = Preco[0];
p= 1
while (p < Preco.Length)
{

    if (Preco[p] > PrecoMaior)
    {
        PrecoMaior = Preco[p];
    }
    if (Preco[p] < PrecoMenor)
    {
        PrecoMenor = Preco[p];
    }
    p++;
}
Console.WriteLine("Maior Preço: R$ " + Math.Round(PrecoMaior, 2));
Console.WriteLine("Menor Preço: R$" + Math.Round(PrecoMenor, 2));
PrecoMedio = Soma / Preco.Length;
Console.WriteLine("Média de Preço: R$ " + Math.Round(PrecoMedio, 2));
    
