int N = 0;
int count = 0;
Double preco;
Double soma = 0.0;
Double media = 0.0;

Console.WriteLine("Entre com N");
N = Convert.ToInt32(Console.ReadLine());
while (count < N)
{
    Console.WriteLine("Entre com preço: ");
    preco = Convert.ToDouble(Console.ReadLine());
    Console.WriteLine("Preço digitado:" + preco);
    soma=soma + preco;
    count++;    
}
media = soma / N;
Console.WriteLine("Média dos preços: " + media);
